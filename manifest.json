{
  "manifest_version": 3,
  "name": "TweetBoost â€“ AI Tweet Enhancer",
  "version": "1.0.0",
  "description": "Suggests funnier, more savage, and more intellectual versions of your tweet using Gemini AI.",
  "icons": {
    "128": "icons/twitter.png"
  },
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icons/twitter.png"
  },
  "options_page": "options/options.html",
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*"],
      "js": ["content/content.js"],
      "css": ["content/content.css"]
    }
  ]
} 